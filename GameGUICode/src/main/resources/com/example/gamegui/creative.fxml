<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.ToggleGroup?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gamegui.creativeController" style="-fx-background-color: black;">
    <center>
        <HBox fx:id="currImage_hbox" style="-fx-background-color: darkgray;" alignment="CENTER">
            <ImageView fx:id="currImage"></ImageView>
        </HBox>
    </center>
    <right>
        <VBox fx:id="sidebar_vbox" style="-fx-background-color: black; -fx-padding: 5 10 10 5;" maxWidth="700" spacing="20">
            <VBox>
                <Label text="Grayscale"></Label>
                <HBox alignment="BASELINE_CENTER">
                    <ToggleButton fx:id="gray_on" text="On"></ToggleButton>
                    <ToggleButton fx:id="gray_off" text="Off"></ToggleButton>
                </HBox>
            </VBox>
            <VBox>
                <Label text="Size"></Label>
                <HBox>
                    <Label text="0"></Label>
                    <Slider fx:id="size_slider" min="0" max="150"></Slider>
                    <Label text="150"></Label>
                </HBox>
            </VBox>
            <VBox>
                <Label text="Rotate"></Label>
                <HBox alignment="BASELINE_CENTER">
                    <Button fx:id="r_left"></Button>
                    <Button fx:id="r_right"></Button>
                </HBox>
            </VBox>
            <VBox>
                <Label text="Mirror"></Label>
                <HBox alignment="BASELINE_CENTER">
                    <ToggleButton fx:id="mirror_on" text="On"></ToggleButton>
                    <ToggleButton fx:id="mirror_off" text="Off"></ToggleButton>
                </HBox>
            </VBox>
            <VBox>
                <HBox>
                    <Button fx:id="export" style="-fx-background-color: green; -fx-text-fill: white;">Export</Button>
                    <Button fx:id="exit"  style="-fx-background-color: red; -fx-text-fill: white">Exit</Button>
                </HBox>
            </VBox>
        </VBox>
    </right>
    <bottom>
        <FlowPane fx:id = "fp" style="-fx-background-color: black; -fx-padding: 5 10 10 5;" hgap="4" alignment="BASELINE_CENTER">
            <VBox fx:id="tg_vbox">
                <ToggleButton fx:id="planets_tb" text="Planets"></ToggleButton>
                <ToggleButton fx:id="backgrounds_tb" text="Backgrounds"></ToggleButton>
            </VBox>
            <HBox fx:id="bottom_hbox">
                <ImageView fx:id="prev"> </ImageView>
                <ImageView fx:id="p1"> </ImageView>
                <ImageView fx:id="p2"> </ImageView>
                <ImageView fx:id="p3"> </ImageView>
                <ImageView fx:id="p4"> </ImageView>
                <ImageView fx:id="p5"> </ImageView>
                <ImageView fx:id="p6"> </ImageView>
                <ImageView fx:id="next"> </ImageView>
            </HBox>
        </FlowPane>
    </bottom>
</BorderPane>
